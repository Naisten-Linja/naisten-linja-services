{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017"],
    "outDir": "build-backend"
  },
  "include": [
    "src/index-backend.ts",
    "src/*.d.ts",
    "src/backend/**/*.ts",
    "src/common/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
